    <link href="~/template/assets/css/owl.carousel.css" rel="stylesheet" />
    <link href="~/template/assets/css/owl.theme.css" rel="stylesheet" />
    <script src="~/template/assets/js/owl.carousel.js"></script>
    <script src="~/template/js/jquery.lazy.min.js"></script>

    <link href="~/template/css/slippry.css" rel="stylesheet" />
    <script src="~/template/js/scripts-f0e4e0c2.js"></script>

    <div class="container">
        <div class="row">
            <section class="home">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="home-position-1">
                        <div class="row">
                            <section class="main-column">
                                <div class="img-slider">
                                    <div class="wrap">
                                        <ul id="jquery-demo">
                                            @foreach (SHOPONLINE.Models.ShopOnline.Category c in ViewBag.Categories)
                                            {
                                                <li>
                                                    <a href="/Product/ListByCategory/@c.Id">
                                                        <img alt="@c.NameVN" src="~/images/categories/@c.Image" />
                                                    </a>
                                                    <div class="slider-detils" style="margin-right:2px;">
                                                        <h3 style="color:green">
                                                            THẾ GIỚI GIÀY THỂ THAO
                                                            @if (c.Image == "slide-1.jpg")
                                                            {
                                                                <label>NĂNG ĐỘNG</label>
                                                            }
                                                            else if (c.Image == "slide-2.jpg")
                                                            {
                                                                <label>TRẺ TRUNG</label>
                                                            }
                                                            else
                                                            {
                                                                <label>PHONG CÁCH</label>
                                                            }
                                                        </h3>
                                                        <span style="color:green !important">Đến xem là thích, Thích là mua, Mua là thích</span>
                                                        <a class="slide-btn" style="color:red !important; border-color:green" href="/Product/ListByCategory/@c.Id">Xem ngay</a>
                                                    </div>
                                                </li>
                                            }
                                        </ul>
                                    </div>
                                </div>
                                <div class="clear"> </div>

                            </section>
                            <div class="clearfix"></div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#owl-demo").owlCarousel({
                autoPlay: 5000,
                items: 1,
                lazyLoad: true,
                itemsDesktop: [1199, 1],
                itemsDesktopSmall: [979, 1],
                navigation: false,
                navigationText: ["<<", ">>"]
            });
        });
    </script>
</section>