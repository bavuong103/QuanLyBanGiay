@{
    ViewBag.Title = "Change Password";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="col-sm-8 col-sm-offset-2">
    <div class="panel panel-default">
        <div class="panel-heading">
            <span class="glyphicon glyphicon-user"></span> CHANGE PASSWORD
        </div>
        <div class="panel-body">
            @Html.ValidationSummary()
            @using (Html.BeginForm())
            {
                <div class="form-group">
                    <label>User name</label>
                    @Html.TextBox("Id", null, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Current Password</label>
                    @Html.TextBox("Password", null, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>New Password</label>
                    @Html.TextBox("Password1", null, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Confirm New Password</label>
                    @Html.TextBox("Password2", null, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <button class="btn btn-default">
                        <span class="glyphicon glyphicon-log-in"></span> Change
                    </button>
                </div>
            }
        </div>
        <div class="panel-footer"></div>
    </div>
</div>